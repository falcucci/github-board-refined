{
  "applications": {
    "gecko": {
      "id": "alexsander.santos@luizalabs.com",
      "strict_min_version": "42.0"
    }
  },
  "manifest_version": 2,
  "name": "github-board-refined",
  "version": "1.2",
  "content_scripts": [{
    "run_at": "document_start",
    "matches": [
      "https://github.com/*/projects/*"
    ],
    "js": [
      "scripts/jquery-3.1.0.min.js",
      "scripts/jquery.modal.min.js",
      "dist/browser-polyfill.min.js",


      "dist/modal.js",
      "dist/hideReferences.js",
      "dist/content.js"
    ],
    "css": [
      "css/window.css",
      "css/content.css",
      "css/jquery.modal.min.css"
    ]
  }],
  "background": {
    "persistent": false,
    "scripts": [
      "dist/background.js",
      "dist/browser-polyfill.min.js"
    ]
  },
  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "48": "images/final-state-48.png"
    },
    "default_title": "Github Board Refined",
    "default_popup": "popup.html"
  },

  "permissions": [
    "storage",
    "contextMenus",
    "activeTab",
    "https://api.github.com/*"
  ]
}
